	public static void Process(ArrayList<String> conceptArray){
		
		String[][] toPlant = new String[conceptArray.size()][3];
		String noun1 = "";
		String verb = "";
		String noun2 = "";
		int x = 0;
		for(String str : conceptArray){
			while (str != null){
				x = str.indexOf("/N");
				noun1 = str.substring(0, x);
				System.out.println(noun1);
				break;
			}
		} //end for
	}
	
	
